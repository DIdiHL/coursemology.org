<header class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
          <% if ["marketplace", "my_marketplace_courses", "my_marketplace_themes"].include? params[:controller]%>
            <%= link_to marketplace_index_path(user_marketplace_id), id: "site-logo" do %>
              <!-- TODO modify the icon -->
              <img src="/images/coursemology_marketplace_white.png" />
            <% end %>
          <% else %>
            <%= link_to "/", id: "site-logo" do %>
              <img src="/images/coursemology_white.png" />
            <% end %>
          <% end %>
      <div style="float: left; margin-top: 13px;margin-left:10px">
        <%= render partial: "layouts/facebook_like", locals: {style:"button_count"} %>
      </div>
      <a class="btn btn-navbar collapsed" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-chevron-down"></span>
      </a>

      <div class="nav-collapse" style="height: 0px;">
        <ul class="nav pull-right">
          <li><%= link_to "Marketplace", main_app.marketplace_index_path(user_marketplace_id) %></li>
          <!-- TODO remove -->
          <li class="dropdown">
            <a id="marketplace_items_control" class="dropdown-toggle" data-toggle="dropdown" href="#">
              Marketplace Items<b class="caret"></b>
            </a>
            <ul class="dropdown-menu" role="menu" arial-labelled-by="marketplace_items_control">
              <li><%= link_to "My Marketplace Courses", main_app.my_marketplace_courses_path %></li>
              <li><%= link_to "My Marketplace Items", main_app.my_marketplace_themes_path%></li>
            </ul>
          </li>
          <li><%= link_to "Courses", main_app.courses_path %></li>
          <li><%= link_to "Help", main_app.help_path %></li>
          <% if current_user %>
              <li class="dropdown">
                <a id="usercontrol" class="dropdown-toggle" data-toggle="dropdown" href="#">
                  <%= current_user.name %><b class="caret"></b>
                </a>
                <ul class="dropdown-menu" role="menu" arial-labelled-by="usercontrol">
                  <li><%= link_to "My Courses", main_app.my_courses_path %></li>
                  <li><%= link_to "Account management", main_app.users_settings_path %></li>
                  <% if can? :manage, :user %>
                      <li><%= link_to "Admin panel", main_app.admins_path %></li>
                  <% end %>
                  <li><%= link_to "Sign out", main_app.destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to "Sign up", main_app.new_user_registration_path %></li>
              <li><%= link_to "Sign in", main_app.new_user_session_path %></li>
          <% end %>
          <% if masquerading? %>
              <li>
                <%= link_to "(Stop Masquerading)", main_app.destroy_masquerades_path, method: :delete %>
              </li>
          <% end %>
          <li>

          </li>
        </ul>
      </div>
    </div>
  </div>
</header>
